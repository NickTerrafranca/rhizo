<% provide(:title, 'Recipe') %>

<h3><%= @recipe.title %></h3>
<strong>Description</strong>
<p><%= @recipe.description %></p>
<strong>Ingredients</strong>
<ul>
  <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
  <li>
    <div>
      <%= recipe_ingredient_line_item(recipe_ingredient) %>
    </div>
  </li>
  <% end %>
</ul>
<div><%= link_to 'Edit', edit_recipe_path(@recipe) %></div>
<div><%= link_to "Create New Batch of #{@recipe.title}", new_recipe_batch_path(@recipe) %></div>
<div><%= link_to "Work with batches of #{@recipe.title}", recipe_batches_path(@recipe) %></div>
