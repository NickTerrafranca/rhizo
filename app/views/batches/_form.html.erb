<%= form_with(model: [@recipe, @batch], local: true ) do |batch_form| %>
  <%= render 'shared/error_messages', object: batch_form.object %>

  <%= batch_form.label :name %>
  <%= batch_form.text_field :name, class: 'form-control' %>

  <%= batch_form.label :prep_date %>
  <%= batch_form.date_field :prep_date, class: 'form-control' %>

  <%= batch_form.label :multiplier %>
  <%= batch_form.number_field( :multiplier, min: 0.10, max: 1000.0, step: 0.05, class: 'form-control') %>

  <%= batch_form.label "Concentration % (decimal)" %>
  <%= batch_form.number_field :concentration, min: 0.10, max: 200.0, step: 0.05, class: 'form-control' %>

  <%= batch_form.label :notes %>
  <%= batch_form.text_field :notes, class: 'form-control' %>

  <%= batch_form.submit 'Go', class: 'btn btn-primary' %>

<% end %>
